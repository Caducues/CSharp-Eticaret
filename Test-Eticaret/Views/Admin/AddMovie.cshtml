@model Test_Eticaret.Models.Movie
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Test_Eticaret</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- Css Styles -->

    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css/plyr.css" type="text/css">
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">

    <!-- CSS dosyaları burada yer alır -->
</head>


<body class="text-white">
 


    <div class="container my-5">
        <h1 class="mb-4">Yeni Film Ekle</h1>

        <!-- Film Ekleme Formu -->
        <form asp-action="AddMovie" method="post" enctype="multipart/form-data">
            <!-- Film Adı -->
            <div class="form-group">
                <label for="movie_name">Film Adı</label>
                <input asp-for="movie_name" type="text" class="form-control" id="movie_name" name="movie_name" required>
                <span asp-validation-for="movie_name" class="text-danger"></span>
            </div>

            <!-- Film Açıklaması -->
            <div class="form-group">
                <label for="movie_description">Film Açıklaması</label>
                <textarea asp-for="movie_description" class="form-control" id="movie_description" name="movie_description" rows="3" required></textarea>
                <span asp-validation-for="movie_description" class="text-danger"></span>
            </div>

            <!-- Kategori Seçimi -->
            <div class="form-group">
                <label for="category_id">Kategori</label>
                <select asp-for="category_id" class="form-control" id="category_id" name="category_id" required>
                    <!-- Kategoriler dinamik olarak buraya eklenecek -->
                    <option value="1">Aksiyon</option>
                    <option value="2">Komedi</option>
                    <option value="3">Dram</option>
                    <option value="4">Bilim Kurgu</option>
                </select>
                <span asp-validation-for="category_id" class="text-danger"></span>
            </div>

            <!-- Yayınlanma Yılı -->
            <div class="form-group">
                <label for="movie_date">Yayınlanma Yılı</label>
                <input asp-for="movie_date" type="date" class="form-control" id="movie_date" name="movie_date" min="1900" max="2099" required>
                <span asp-validation-for="movie_date" class="text-danger"></span>
            </div>

            <!-- Film Süresi (Dakika) -->
            <div class="form-group">
                <label for="movie_time">Film Süresi (Dakika)</label>
                <input asp-for="movie_time" type="number" class="form-control" id="movie_time" name="movie_time" min="1" required>
                <span asp-validation-for="movie_time" class="text-danger"></span>
            </div>

            <!-- Film Resmi Yükleme -->
            <div class="form-group">
                <label for="picture_url">Film Resmi Yükle</label>
                <input type="file" class="form-control" asp-for="picture_url" id="picture_url" name="picture_url"  >
                <span asp-validation-for="picture_url" class="text-danger"></span>
            </div>

            <!-- Film Video Yükleme -->
            <div class="form-group">
                <label for="movie_url">Film Video Yükle</label>
                <input type="file" class="form-control" asp-for="movie_url" id="movie_url" name="movie_url"  >
                <span asp-validation-for="movie_url" class="text-danger"></span>
            </div>

            <!-- Like Sayısı -->
            <div class="form-group">
                <label for="like">Like Sayısı</label>
                <input type="number" class="form-control" asp-for="like" id="like" name="like" min="0" value="0" required>
                <span asp-validation-for="like" class="text-danger"></span>
            </div>

            <!-- Görüntülenme Sayısı -->
            <div class="form-group">
                <label for="view">Görüntülenme Sayısı</label>
                <input type="number" class="form-control" asp-for="view" id="view" name="view" min="0" value="0" required>
                <span asp-validation-for="view" class="text-danger"></span>
            </div>

            <!-- Submit Butonu -->
            <button type="submit" class="btn btn-success">Filmi Kaydet</button>
            <a href="/admin/index/" class="btn btn-primary ml-2">Geri Dön</a>
        </form>
    </div>

    <!-- Bootstrap 5 JS (Popper.js gereksiz) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JQuery Validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
