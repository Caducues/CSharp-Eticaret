@model List<Test_Eticaret.Models.Movie>

@{
    Layout = "_AdminLayout"; // Admin Layout dosyasını belirtme
    
} 
<div class="text-white container my-5">
        <h1>Manage Movies</h1>
    <a href="/admin/addmovie/" class="btn btn-success mb-3">Add New Movie</a>
    <table class=" text-white  table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Movie Title</th>
                    <th>Genre</th>
                    <th>Release Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            
            @foreach(var movie in Model)
            {
            <tbody>
                <tr>
                    <td>@movie.movie_name</td>
                    <td>@movie.category_id</td>
                    <td>2024</td>
                    <td>
                        <a href="#" class="btn btn-warning">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

            </tbody>
            }
           
        </table>
        <a href="AdminDashboard.html" class="btn btn-primary">Back to Dashboard</a>
    </div>