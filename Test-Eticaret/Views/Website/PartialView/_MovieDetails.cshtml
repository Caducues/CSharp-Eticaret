@model Test_Eticaret.Models.Movie;


<div class="anime__details__widget">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <ul>
                <li><span>Type:</span> TV Series</li>
                <li><span>Date aired:</span>@Model.movie_date</li>
                <li><span>Genre:</span> @Model.Category.category_name</li>
            </ul>
        </div>
        <div class="col-lg-6 col-md-6">
            <ul>
                <li><span>Scores:</span> @Model.imdb</li>
                <li><span>Rating:</span> @Model.like</li>
                <li><span>Duration:</span>@Model.movie_time dakika</li>
                <li><span>Views:</span> @Model.view</li>
            </ul>
        </div>
    </div>
</div>